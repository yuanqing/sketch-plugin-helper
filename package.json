{
  "name": "sketch-plugin-helper",
  "version": "0.0.3",
  "description": "An opinionated, batteries-included toolkit for making Sketch plugins",
  "keywords": [
    "cli",
    "plugin",
    "sketch",
    "toolkit"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/sketch-plugin-helper.git"
  },
  "files": [
    "src/**/*.js",
    "src/template/**/*"
  ],
  "main": "src/api.js",
  "bin": {
    "sph": "src/cli.js"
  },
  "scripts": {
    "fix": "prettier-standard 'src/**/*.js'",
    "lint": "standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "start": "yarn run init && yarn run build && yarn run version",
    "init": "rm -rf sketch-hello-world && ./src/cli.js init --name='Hello World' --description='A plugin that prints Hello World' --author='Lim Yuan Qing' --username=yuanqing --repository=sketch-hello-world && yarn link && cd sketch-hello-world && yarn link sketch-plugin-helper",
    "build": "cd sketch-hello-world && ../src/cli.js build",
    "watch": "cd sketch-hello-world && ../src/cli.js build --watch",
    "version": "cd sketch-hello-world && ../src/cli.js version minor"
  },
  "dependencies": {
    "brfs": "^2.0.2",
    "chokidar": "^2.1.1",
    "dashify": "^2.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "is-utf8": "^0.2.1",
    "mustache": "^3.0.1",
    "mversion": "^1.13.0",
    "npm-run-path": "^2.0.2",
    "prettier-standard": "^9.1.1",
    "recursive-readdir": "^2.2.2",
    "semver": "^5.6.0",
    "standard": "^12.0.1",
    "temp-write": "^3.4.0",
    "transform-loader": "^0.2.4",
    "webpack": "^4.29.4",
    "xml-js": "^1.6.11",
    "yargs": "^13.2.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "CGSizeMake",
      "NSAlert",
      "NSButton",
      "NSButtonCell",
      "NSLayoutAttributeLeft",
      "NSLineBreakByTruncatingTail",
      "NSMakeRect",
      "NSMatrix",
      "NSOffState",
      "NSOnState",
      "NSPopUpButton",
      "NSRadioButton",
      "NSRadioModeMatrix",
      "NSStackView",
      "NSStackViewGravityTop",
      "NSSwitchButton",
      "NSTextField",
      "NSUserInterfaceLayoutOrientationVertical"
    ]
  }
}
