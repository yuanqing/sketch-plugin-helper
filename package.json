{
  "name": "sketch-plugin-helper",
  "version": "0.0.0",
  "description": "",
  "author": "Lim Yuan Qing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/sketch-plugin-helper.git"
  },
  "bin": {
    "sph": "src/sph/index.js"
  },
  "dependencies": {
    "chokidar": "^2.1.1",
    "dashify": "^2.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "is-utf8": "^0.2.1",
    "mustache": "^3.0.1",
    "mversion": "^1.13.0",
    "npm-run-path": "^2.0.2",
    "prettier-standard": "^9.1.1",
    "recursive-readdir": "^2.2.2",
    "semver": "^5.6.0",
    "standard": "^12.0.1",
    "webpack": "^4.29.4",
    "xml-js": "^1.6.11",
    "yargs": "^13.2.0"
  },
  "devDependencies": {
    "lint-staged": "^8.1.4"
  },
  "scripts": {
    "fix": "prettier-standard 'src/**/*.js'",
    "lint": "standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "start": "yarn run init && yarn run build && yarn run version",
    "init": "rm -rf sketch-hello-world && ./src/sph/index.js init --name='Hello World' --description='A plugin that prints Hello World' --author='Lim Yuan Qing' --username=yuanqing --repository=sketch-hello-world",
    "build": "cd sketch-hello-world && ../src/sph/index.js build",
    "link": "cd sketch-hello-world && ../src/sph/index.js link",
    "unlink": "cd sketch-hello-world && ../src/sph/index.js unlink",
    "watch": "cd sketch-hello-world && ../src/sph/index.js build --watch",
    "version": "cd sketch-hello-world && ../src/sph/index.js version minor"
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "git add"
    ]
  }
}
